<section class="section">
  <h1 class="title">ログイン</h1>

  <%= form_with url: session_path, model: @user do |f| %>
    <div class="field">
      <%= f.label :email, class: :label %>
      <div class="control">
        <%= f.email_field :email, class: :input %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, class: :label %>
      <div class="control">
        <%= f.password_field :password, class: :input %>
      </div>
    </div>

    <div class="field">
      <%= f.submit "ログイン", class: "button" %>
    </div>
  <% end %>
</section>
